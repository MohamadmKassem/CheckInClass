<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_end_background" android:endColor="@color/button_start_background" android:angle="45"></gradient>
            <corners android:radius="150dp" ></corners>
            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" ></padding>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_start_background" android:endColor="@color/button_end_background" android:angle="45"></gradient>
            <corners android:radius="150dp" ></corners>
            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" ></padding>
        </shape>
    </item>
</selector>